{
  "manifest_version": 2,
  "name": "d.tech Canvas Login Fixer",
  "version": "0.1.1",
  "description": "Remembers if you're a parent or a student when logging into d.tech Canvas.",
  "author": "iamtheyammer",
  "content_scripts": [
    {
      "matches": ["https://sites.google.com/dtechhs.org/dtechfamilyportal/home"],
      "js": ["content_scripts/redirect.bundle.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": true
  },
  "permissions": [
    "storage",
    "tabs",
    "https://go.canvascbl.com/",
    "https://canvascbl.com/",
    "https://canvascbl.github.io/"
  ],
  "browser_action": {},
  "icons": {
    "16": "img/16px.png",
    "48": "img/48px.png",
    "128": "img/128px.png",
    "256": "img/256px.png"
  }
}